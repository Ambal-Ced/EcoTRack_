@model _Eco.Models.Electrate
@using System.Security.Claims

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Electrate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- kWh field -->
            <div class="form-group">
                <label asp-for="kwh" class="control-label"></label>
                <input asp-for="kwh" class="form-control" />
                <span asp-validation-for="kwh" class="text-danger"></span>
            </div>

            <!-- Total Bill field -->
            <div class="form-group">
                <label asp-for="totalbill" class="control-label"></label>
                <input asp-for="totalbill" class="form-control" />
                <span asp-validation-for="totalbill" class="text-danger"></span>
            </div>

            <!-- Date field -->
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>

            <!-- User Email (UserId) selection -->
            <div class="form-group hidingemai">
                <label asp-for="UserId" class="control-label">Select Email</label>
                <select asp-for="UserId" class="form-control">
                    <option value="">-- Select your email --</option>
                    <option value="@User.FindFirstValue(ClaimTypes.NameIdentifier)">@User.Identity.Name</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Hidden field to ensure UserId is submitted -->
            <input type="hidden" asp-for="UserId" />

            <!-- Submit button for editing -->
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
