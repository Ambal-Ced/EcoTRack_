@model _Eco.Models.Electrate
@using System.Security.Claims

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _Eco</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_Eco.styles.css" asp-append-version="true" />
</head>
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Electrate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- kWh field -->
            <div class="form-group">
                <label asp-for="kwh" class="control-label"></label>
                <input asp-for="kwh" class="form-control" />
                <span asp-validation-for="kwh" class="text-danger"></span>
            </div>

            <!-- Total Bill field -->
            <div class="form-group">
                <label asp-for="totalbill" class="control-label"></label>
                <input asp-for="totalbill" class="form-control" />
                <span asp-validation-for="totalbill" class="text-danger"></span>
            </div>

            <!-- Date field -->
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>

            <!-- User Email (UserId) selection -->
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Select Email</label>
                <select asp-for="UserId" class="form-control">
                    <option value="">-- Select your email --</option>
                    <option value="@User.FindFirstValue(ClaimTypes.NameIdentifier)">@User.Identity.Name</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btr" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger ">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
